{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES6",
        "moduleResolution": "Node",
        "baseUrl": "./",
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "types": ["jest", "node"],
        "strict": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist", "src/**/*.test.ts"]
}
