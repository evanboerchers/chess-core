{
    "compilerOptions": {
        "target": "ES6",
        "module": "Commonjs",
        "paths": {
            "@data/*": [
                "./data/*"
            ]
        },
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "./dist/types",
        "emitDeclarationOnly": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}