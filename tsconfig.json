{
    "compilerOptions": {
        "target": "ES6",
        "module": "Commonjs",
        "baseUrl": "./",
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "./dist",
        "sourceMap": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "types": ["jest", "node"]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}